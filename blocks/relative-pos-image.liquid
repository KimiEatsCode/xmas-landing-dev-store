{% doc %}
  @prompt
    an image from library that is centered and position relative and takes up full width of a section with option to rotate, add all the options for an relative positioned image including left,right,top, bottom and z-index and width
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-relative-image-container-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    height: 100%;
  
  }

  .ai-relative-image-wrapper-{{ ai_gen_id }} {
    position: relative;
    {% if block.settings.position_type == 'custom' %}
      top: {{ block.settings.top }}%;
      left: {{ block.settings.left }}%;
      transform: translate(-50%, -50%) rotate({{ block.settings.rotation }}deg);
    {% else %}
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%) rotate({{ block.settings.rotation }}deg);
    {% endif %}
    width: {{ block.settings.width }}%;
    z-index: {{ block.settings.z_index }};
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .ai-relative-image-{{ ai_gen_id }} {
    width: 100%;
    height: auto;
    display: block;
  }

  .ai-relative-image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100px;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .ai-relative-image-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 500px;
    max-height: 500px;
  }

  .ai-relative-image-empty-state-{{ ai_gen_id }} {
    position: relative;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    padding: 12px 20px;
    font-size: 14px;
    color: #666;
    text-align: center;
    pointer-events: none;
  }
{% endstyle %}

<div
  class="ai-relative-image-container-{{ ai_gen_id }}"
  {{ block.shopify_attributes }}
>
  <div class="ai-relative-image-wrapper-{{ ai_gen_id }}">
    {% if block.settings.image %}
      <img
        src="{{ block.settings.image | image_url: width: 2000 }}"
        alt="{{ block.settings.image.alt | escape }}"
        loading="lazy"
        width="{{ block.settings.image.width }}"
        height="{{ block.settings.image.height }}"
        class="ai-relative-image-{{ ai_gen_id }}"
      >
    {% else %}
      <div class="ai-relative-image-placeholder-{{ ai_gen_id }}">
        {{ 'image' | placeholder_svg_tag }}
        <div class="ai-relative-image-empty-state-{{ ai_gen_id }}">
          Add an image to get started
        </div>
      </div>
    {% endif %}
  </div>
</div>

{% schema %}
{
  "name": "relative positioned image",
  "settings": [
    {
      "type": "header",
      "content": "Image"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "header",
      "content": "Position"
    },
    {
      "type": "select",
      "id": "position_type",
      "label": "Position type",
      "options": [
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "custom",
          "label": "Custom"
        }
      ],
      "default": "center"
    },
    {
      "type": "range",
      "id": "left",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "%",
      "label": "Left position",
      "default": 50
    },
    {
      "type": "range",
      "id": "top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "%",
      "label": "Top position",
      "default": 50
    },
    {
      "type": "range",
      "id": "width",
      "min": 10,
      "max": 100,
      "step": 5,
      "unit": "%",
      "label": "Width",
      "default": 100
    },
    {
      "type": "range",
      "id": "z_index",
      "min": -10,
      "max": 10,
      "step": 1,
      "label": "Z-index",
      "default": 1
    },
    {
      "type": "range",
      "id": "rotation",
      "min": -180,
      "max": 180,
      "step": 5,
      "unit": "deg",
      "label": "Rotation",
      "default": 0
    }
  ],
  "presets": [
    {
      "name": "relative positioned image"
    }
  ]
}
{% endschema %}
