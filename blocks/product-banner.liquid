{% doc %}
  @prompt
    two column banner with product image on the left and text from the product on the right with a button on right as well under the text, banner is full-widtrebah at desktop and stacked column on mobile, hide price
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
 {% comment %} ***desktopstyles {% endcomment %}
  .ai-product-banner-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    flex-basis:100%;
    flex-direction:row;
    gap: {{ block.settings.column_gap }}px;
    width: 100%;
  }

  .ai-product-banner__image-{{ ai_gen_id }} {
    flex: 0 0 50%;
    max-width: 40%;
     width: {{ block.settings.image_width }}px;
  }

  .ai-product-banner__image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    overflow: hidden;
    border-radius: {{ block.settings.image_border_radius }}px;
  }

  .ai-product-banner__image-wrapper-{{ ai_gen_id }} img {
    width: 100%;
    height: auto;
    display: block;
  }

  .ai-product-banner__image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    aspect-ratio: 1 / 1;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-product-banner__image-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 300px;
    max-height: 300px;
  }

  .ai-product-banner__content-{{ ai_gen_id }} {
    flex: 0 0 50%;
    max-width: 50%;
    display: flex;
    flex-direction: column;
    gap: {{ block.settings.content_gap }}px;
  }

  .ai-product-banner__title-{{ ai_gen_id }} {
    font-size: {{ block.settings.title_size }}px;
    color: {{ block.settings.text_color }};
    margin: 0;
    line-height: 1.2;
  }

  .ai-product-banner__description-{{ ai_gen_id }} {
    font-size: {{ block.settings.description_size }}px;
    color: {{ block.settings.text_color }};
    line-height: 1.6;
  }

  .ai-product-banner__button-{{ ai_gen_id }} {
    display: inline-flex;
    text-align:center;
    width: {{ block.settings.button_width}};
    padding: 14px 28px;
    background-color: {{ block.settings.button_background }};
    color: {{ block.settings.button_text_color }};
    border-width: {{block.settings.button_border_width }}px;
    border-style: solid;
    border-color: {{block.settings.button_border_color }};
    border-radius: {{ block.settings.button_border_radius }}px;
    font-size: {{ block.settings.button_text_size }}px;
    text-decoration: none;
    cursor: pointer;  
  }

  .ai-product-banner__button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_background }};
    color: {{ block.settings.button_text_color }};
  }

  .ai-product-banner__empty-state-{{ ai_gen_id }} {
    font-size: 14px;
    color: #666;
    text-align: center;
    padding: 20px;
    font-style: italic;
  }

   .footer-content {
      margin:0 auto!important;
    }

    .email-signup__input.paragraph {
    margin-left:14px;
  }

  @media screen and (max-width: 1024px) {
    .ai-product-banner-{{ ai_gen_id }} {
      height:55%;
    }

   .ai-product-banner__content-{{ ai_gen_id }} {
    flex: 0 0 60%;
    max-width: 60%;
    display: flex;
    flex-direction: column;
    gap: {{ block.settings.content_gap }}px;
    gap:10px;
  }

   .ai-product-banner__image-{{ ai_gen_id }} {
    flex: 0 0 40%;
    max-width: 40%;
     width: {{ block.settings.image_width }}px;
  }

   .ai-product-banner__title-{{ ai_gen_id }} {
    font-size: {{ block.settings.title_size }}px;
    font-size: min(5vw, 35px);
    color: {{ block.settings.text_color }};
    margin: 0;
    line-height: 1.2;
  }

   .ai-product-banner__description-{{ ai_gen_id }} {
      font-size: {{ block.settings.description_size }}px;
      font-size: min(5vw, 15px);
    }

}

{% comment %} ***mobilestyles {% endcomment %}

  @media screen and (max-width: 749px) {
    div[class^=ai-product-banner-{{ ai_gen_id }}] {
      flex-direction: column;
      text-align:center!important;
  
      gap:0px!important;
      height:auto;
      padding: {{ block.settings.section_padding | times: 0.75 }}px;
      width:100vw;
    }

    .ai-product-banner__image-{{ ai_gen_id }},
    .ai-product-banner__content-{{ ai_gen_id }} {
      flex: 0 0 100%;
      max-width: 100%;
      min-width:350px;
    }

    .ai-product-banner__title-{{ ai_gen_id }} {
      font-size: {{ block.settings.title_size | times: 0.8 }}px;
    }

    .ai-product-banner__description-{{ ai_gen_id }} {
      font-size: {{ block.settings.description_size | times: 0.9 }}px;
      padding:0 9%;
    }

    .ai-product-banner__button-{{ ai_gen_id }} {
      width: 100%;
    }

    .footer-content {
      margin:none;

    }

      .email-signup__input.paragraph {
    margin-left:0px;
  }
  }
{% endstyle %}

{% if template.name == 'index' %}
<div class="ai-product-banner-{{ ai_gen_id }}" {{ block.shopify_attributes }}>

  <div class="ai-product-banner__image-{{ ai_gen_id }}">
    {% if block.settings.product and block.settings.product.featured_image %}
        <img
          src="{{ block.settings.product.featured_image | image_url: width: 1500 }}"
          alt="{{ block.settings.product.featured_image.alt | escape }}"
          loading="lazy"
          width="{{ block.settings.product.featured_image.width }}"
          height="{{ block.settings.product.featured_image.height }}"
        >
      {% else %}
        <div class="ai-product-banner__image-placeholder-{{ ai_gen_id }}">
          {{ 'product-1' | placeholder_svg_tag }}
        </div>
      {% endif %}
    <div class="ai-product-banner__image-wrapper-{{ ai_gen_id }}">
    
    </div>
  </div>

  <div class="ai-product-banner__content-{{ ai_gen_id }}">
    {% if block.settings.product %}
      <h2 class="ai-product-banner__title-{{ ai_gen_id }}">
        {{ block.settings.product.title }}
      </h2>

      {% if block.settings.product.description != blank %}
        <div class="ai-product-banner__description-{{ ai_gen_id }}">
          {{ block.settings.product.description | strip_html | truncate: 200 }}
        </div>
      {% endif %}

      <a
        href="{{ block.settings.product.url }}"
        class="ai-product-banner__button-{{ ai_gen_id }}"
      >
        {{ block.settings.button_text }}
      </a>
    {% else %}
      <div class="ai-product-banner__empty-state-{{ ai_gen_id }}">
        Next, select a product to display
      </div>
    {% endif %}
  </div>
  </div>

   {% endif %}
